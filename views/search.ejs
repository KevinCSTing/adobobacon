<meta property="og:type" content="website">
<meta property="og:url" content="https://adobobacon.com/">
<meta property="og:image" content="http://adobobacon.com/images/AdoboBacon_bg.png">
<meta property="og:image:secure_url" content="https://adobobacon.com/images/AdoboBacon_bg.png" />
