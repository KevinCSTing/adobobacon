<!---------------------------------------------------------
Start Header
----------------------------------------------------------->
<%- include("partials/header") -%>
<meta property="og:title" content="Adobo Bacon">
<meta property="og:description" content="Adobo Bacon is a personal database of recipes I've tried and have served to family and friends.">
<meta property="og:type" content="website">
<meta property="og:url" content="https://adobobacon.com/">
<meta property="og:image" content="http://adobobacon.com/images/adobobacon-socmed-logo.png">
<meta property="og:image:secure_url" content="https://adobobacon.com/images/adobobacon-socmed-logo.png" />
<meta property="og:image:type" content="image/jpeg" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="600" />


<title>Adobo Bacon </title>

</head>
<body>
<%- include("partials/navbar") -%>
<!---------------------------------------------------------
End Header
----------------------------------------------------------->

<section class="hero-home">
  <div class="hero-inner">
    <h1>Let's make cooking fun!</h1>
      <%- include("partials/search-bar") %>
  </div>
</section>

<div class="container">
<div class="padding-btm-20"></div>
<div class="row">
  <div class="col-md-12 sitehead-logo">
    <img class="adobobacon-logo img-fluid" src="../images/AdoboBaconLogo-transparent.svg" alt="adobobacon logo">
  </div>
</div>
<div class="padding-btm-20"></div>

<div class="row">
  <div class="col-md-12">
    <p class="home-blurb">Adobo Bacon is a personal database of recipes I've tried and have served to family and friends.</p>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%# include("partials/featured-recipes") %>

  </div>
    <%  for(let i=0; i<recipes.length; i++) { %>

      <div class="col-md-6 cta-container" style="background-image: linear-gradient(rgba(0, 0, 0, 0.6),rgba(0, 0, 0, 0.6)), url(<%= recipes[i].imageUrl %>);" >
        <div class="cta-info">
          <a href="/recipe/<%= recipes[i].postURL %>">
            <p class="cta-title"><%= recipes[i].title %></p>
            <p class="cta-date"><%= recipes[i].postedOn %></p>
          </a>
        </div>
      </div>



    <% } %>


</div>

<div class="margin-btm-60"></div>
<div class="margin-btm-60"></div>

</div>

<div class="content-width">
  <div class="row">
    <div class="col-md-12">
      <%# include("partials/instagram-feed") %>
    </div>

  </div>
</div>

<%- include("partials/footer") -%>
